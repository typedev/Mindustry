            "command": "${workspaceFolder}/gradlew",
            "windows": {
                "command": "${workspaceFolder}/gradlew.bat"
            },
            "args": ["build"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
