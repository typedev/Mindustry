{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Desktop",
            "type": "shell",
            "command": "${workspaceFolder}/gradlew",
            "windows": {
                "command": "${workspaceFolder}/gradlew.bat"
            },
            "args": ["desktop:dist"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Собирает desktop версию игры в desktop/build/libs/Mindustry.jar"
        },
        {
            "label": "Run Desktop",
            "type": "shell",
            "command": "${workspaceFolder}/gradlew",
            "windows": {
                "command": "${workspaceFolder}/gradlew.bat"
            },
            "args": ["desktop:run"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Запускает desktop версию игры для разработки"
        },
        {
            "label": "Run Desktop JAR",
            "type": "shell",
            "command": "java",
            "args": ["-jar", "desktop/build/libs/Mindustry.jar"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Запускает собранную desktop версию из JAR файла",
            "dependsOn": "Build Desktop"
        },
        {
            "label": "Build Server",
            "type": "shell",
            "command": "${workspaceFolder}/gradlew",
            "windows": {
                "command": "${workspaceFolder}/gradlew.bat"
            },
            "args": ["server:dist"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Собирает server версию в server/build/libs/server-release.jar"
        },
        {
            "label": "Run Server",
            "type": "shell",
            "command": "${workspaceFolder}/gradlew",
            "windows": {
                "command": "${workspaceFolder}/gradlew.bat"
            },
            "args": ["server:run"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Запускает сервер для разработки"
