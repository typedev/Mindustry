            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Упаковывает спрайты из core/assets-raw в атласы"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "${workspaceFolder}/gradlew",
            "windows": {
                "command": "${workspaceFolder}/gradlew.bat"
            },
            "args": ["clean"],
